<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.IslamiApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">#B7935F</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="Theme.IslamiApp" parent="Base.Theme.IslamiApp" />



    <style name="CustomSplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_inset</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.IslamiApp</item>
    </style>

    
    
    <style name="TitlesStyle">

        <item name="android:textColor">@color/light_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textAlignment">center</item>

    </style>


</resources>